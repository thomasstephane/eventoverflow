<div class='container'>
  <div class='form-box'>
    <% if current_user %>
      <%= render :partial => 'events/index' %>
    <% else %>
      <div class='signup'>
        <p>Sign up</p>
        <%= render '/users/signup' %>
      </div>

      <div class='login'>
        <p>Login</p>
        <%= render '/users/login' %>
      </div>
    <% end %>
  </div>
</div>
